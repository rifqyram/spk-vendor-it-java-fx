<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="main" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ac.unindra.spk_vendor_it.controller.CriteriaController">
    <children>
        <VBox style="-fx-background-color: #AFB8C133;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox minHeight="733.0" prefHeight="733.0" prefWidth="600.0">
                    <padding>
                        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0"/>
                    </padding>
                    <children>
                        <Label text="Manajemen Kriteria">
                            <font>
                                <Font name="Arial Bold" size="24.0"/>
                            </font>
                        </Label>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="NEVER" maxWidth="398.0"
                                                   minWidth="10.0" prefWidth="199.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox prefHeight="26.0" prefWidth="332.0" GridPane.columnIndex="1"
                                      GridPane.halignment="RIGHT" GridPane.hgrow="SOMETIMES"
                                      GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                                    <children>
                                        <HBox prefHeight="26.0" prefWidth="262.0" spacing="12.0">
                                            <children>
                                                <Button fx:id="btnModalAdd" mnemonicParsing="false"
                                                        onAction="#openModalAdd" prefHeight="31.0" prefWidth="162.0"
                                                        styleClass="accent" text="Tambah Criteria"/>
                                                <Button fx:id="printReport" layoutX="10.0" layoutY="10.0"
                                                        mnemonicParsing="false" onAction="#doPrintReport"
                                                        prefHeight="31.0" prefWidth="162.0" styleClass="danger"
                                                        text="Cetak Laporan"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets bottom="12.0" top="12.0"/>
                            </VBox.margin>
                        </GridPane>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="552.0"
                              style="-fx-background-color: #fffffe; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                            <children>
                                <GridPane>
                                    <VBox.margin>
                                        <Insets bottom="14.0" top="14.0"/>
                                    </VBox.margin>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES"/>
                                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="284.0"
                                                           minWidth="10.0" prefWidth="284.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="List Kriteria">
                                            <font>
                                                <Font name="Arial Bold" size="18.0"/>
                                            </font>
                                        </Label>
                                        <HBox prefHeight="31.0" prefWidth="191.0" GridPane.columnIndex="1">
                                            <children>
                                                <TextField fx:id="searchField" prefHeight="26.0" prefWidth="211.0"
                                                           promptText="Cari..."/>
                                                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#doSearch"
                                                        prefHeight="31.0" prefWidth="88.0" text="Cari">
                                                    <HBox.margin>
                                                        <Insets left="14.0"/>
                                                    </HBox.margin>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                                <TableView fx:id="tableCriteria" prefWidth="528.0" styleClass="edge-to-edge"
                                           VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="noCol" prefWidth="75.0" text="No"/>
                                        <TableColumn fx:id="nameCol" prefWidth="148.0" text="Nama Kriteria"/>
                                        <TableColumn fx:id="categoryCol" minWidth="2.0" prefWidth="85.5"
                                                     text="Kategori"/>
                                        <TableColumn fx:id="weightCol" minWidth="2.0" prefWidth="85.5" text="Bobot"/>
                                        <TableColumn fx:id="descriptionCol" minWidth="2.0" prefWidth="200.0"
                                                     text="Deskripsi"/>
                                        <TableColumn fx:id="actionsCol" minWidth="2.0" prefWidth="200.0"
                                                     text="Actions"/>
                                    </columns>
                                    <VBox.margin>
                                        <Insets top="12.0"/>
                                    </VBox.margin>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <Pagination fx:id="pagination" maxPageIndicatorCount="5" pageCount="5" prefHeight="53.0"
                                            prefWidth="528.0" VBox.vgrow="NEVER"/>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="12.0" left="18.0" right="18.0" top="4.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
